@using lab05_ControlTareas.Utils;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        @{
            if (Storage.Instance.usuarioActual.nombreUsuario != null)
            {
                <a class="navbar-brand" href="@Url.Action("userHome", "Home")">TaskApp</a>
            }
            else { 
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">TaskApp</a>
            }
        }
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse p-2" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @{
                        switch (Storage.Instance.usuarioActual.rol)
                        {
                            case "Developer":
                                {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("","")">Crear nueva Tarea</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("","")">Agenda</a>
                                </li>
                            }
                            break;

                        case "ProductManager":
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("","")">Dashboard</a>
                                </li>
                            }
                            break;

                        default:
                            <li class="nav-item">
                            </li>
                            break;
                    }

                    }
                    </li>
                </ul>
            <ul class="navbar-nav ">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Login")">Iniciar Sesion</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
